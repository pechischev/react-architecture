{
    "defaultSeverity": "warning",
    "extends": ["tslint:all", "tslint-config-prettier", "tslint-react"],
    "rules": {
        "increment-decrement": false,
        "ban-ts-ignore": false,
        "file-name-casing": false,
        "deprecation": false,
        "no-conditional-assignment": false,
        "no-unused-variable": false,
        "ordered-imports": false,
        "no-floating-promises": false,
        "no-inferred-empty-object-type": false,
        "no-void-expression": false,
        "no-unbound-method": false,
        "match-default-export-name": false,
        "strict-boolean-expressions": false,
        "no-unsafe-any": false,
        "completed-docs": false,
        "no-non-null-assertion": false,
        "switch-final-break": [true, "always"],
        "no-submodule-imports": false,
        "no-require-imports": false,
        "no-var-requires": false,
        "object-literal-sort-keys": false,
        "arrow-return-shorthand": [false, "multiline"],
        "no-import-side-effect": [
            true,
            {
                "ignore-module": "(\\.html|\\.css|\\.scss)$"
            }
        ],
        "prefer-function-over-method": false,
        "no-namespace": false,
        "only-arrow-functions": [true, "allow-declarations", "allow-named-functions"],
        "no-duplicate-imports": false,
        "linebreak-style": false,
        "no-implicit-dependencies": false,
        "newline-before-return": false,
        "newline-per-chained-call": false,
        "no-return-await": true,
        "await-promise": true,
        "no-magic-numbers": false,
        "prefer-const": [
            true,
            {
                "destructuring": "all"
            }
        ],
        "array-type": [true, "array-simple"],
        "prefer-readonly": true,
        "no-angle-bracket-type-assertion": true,
        "no-redundant-jsdoc": true,
        "prefer-method-signature": true,
        "member-access": [true, "no-public"],
        "align": [true, "parameters", "statements"],
        "ban": false,
        "class-name": true,
        "comment-format": [true],
        "curly": true,
        "eofline": true,
        "forin": true,
        "indent": [true, "spaces"],
        "interface-name": [true, "always-prefix"],
        "jsdoc-format": true,
        "jsx-no-lambda": false,
        "jsx-no-multiline-js": false,
        "label-position": true,
        "max-line-length": [true, 120],
        "member-ordering": false,
        "no-any": true,
        "no-arg": true,
        "no-bitwise": true,
        "no-console": [false, "log", "error", "debug", "info", "time", "timeEnd", "trace"],
        "no-consecutive-blank-lines": true,
        "no-construct": true,
        "no-debugger": true,
        "no-duplicate-variable": true,
        "no-empty": [true, "allow-empty-functions"],
        "no-eval": true,
        "no-empty-interface": true,
        "no-shadowed-variable": true,
        "no-string-literal": true,
        "no-switch-case-fall-through": true,
        "no-trailing-whitespace": false,
        "no-unused-expression": true,
        "no-use-before-declare": true,
        "one-line": [true, "check-catch", "check-else", "check-open-brace", "check-whitespace"],
        "quotemark": [true, "double", "jsx-double"],
        "radix": true,
        "semicolon": [true, "always", "ignore-bound-class-methods"],
        "switch-default": true,
        "trailing-comma": [false],
        "triple-equals": [true, "allow-null-check"],
        "typedef": [true, "call-signature", "parameter", "property-declaration"],
        "typedef-whitespace": [
            true,
            {
                "call-signature": "nospace",
                "index-signature": "nospace",
                "parameter": "nospace",
                "property-declaration": "nospace",
                "variable-declaration": "nospace"
            }
        ],
        "variable-name": [true, "ban-keywords", "check-format", "allow-leading-underscore", "allow-pascal-case"],
        "whitespace": [
            true,
            "check-branch",
            "check-decl",
            "check-module",
            "check-operator",
            "check-separator",
            "check-type",
            "check-typecast"
        ]
    }
}
